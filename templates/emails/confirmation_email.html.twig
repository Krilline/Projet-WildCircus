{% extends 'base_email.html.twig' %}

{% block body %}
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    Well Received !
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p>
                We received your message and we will study it to give you the best response we possibly can.
            </p>
        </columns>
    </row>
    <row class="message">
        <columns>
            <spacer size="35"></spacer>
            <h2>
                <center>
                    Your Message
                </center>
            </h2>
            <spacer size="20"></spacer>
        </columns>
    </row>
    <row>
        <columns>
            <p>
                {{ contact.message }}
            </p>
        </columns>
    </row>
    <hr>
    <row>
        <columns>
            <p>
                Don't Hesitate to contact us back if you got any questions left. We will answer to them with pleasure !
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <button href="{{ url('home') }}">Home</button>
            </center>
        </columns>
    </row>
{% endblock %}
