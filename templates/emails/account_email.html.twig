{% extends 'base_email.html.twig' %}

{% block body %}
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    Account Created !
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p>
                We are glad you join us on this fantastic adventure !
            </p>
        </columns>
    </row>
    <row class="message">
        <columns>
            <spacer size="35"></spacer>
            <h2>
                <center>
                    Your Credentials
                </center>
            </h2>
            <spacer size="20"></spacer>
        </columns>
    </row>
    <row>
        <columns>
            <p>
                <b>Username: </b><em>{{ contact.username }}</em>
            </p>
            <p>
                <b>Email: </b><em>{{ contact.email }}</em>
            </p>
        </columns>
    </row>
    <hr>
    <row>
        <columns>
            <p>
                Don't Hesitate to contact us back if you got any questions. We will answer to them with pleasure !
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <button href="{{ url('home') }}">Home</button>
            </center>
        </columns>
    </row>
{% endblock %}